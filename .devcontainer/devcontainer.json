{
  "name": "Claude Code Environment",

  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USERNAME": "${localEnv:USER}"
    }
  },

  "containerEnv": {
    "HTTP_PROXY": "http://192.168.1.21:2080",
    "HTTPS_PROXY": "http://192.168.1.21:2080",
    "NO_PROXY": "localhost,127.0.0.1,.local"
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false
    },
    "./features/claude-code": {
      "provider": "z.ai",
      "http_proxy": "http://192.168.1.21:2080",
      "https_proxy": "http://192.168.1.21:2080",
      "default_haiku_model": "glm-4.5-air",
      "default_sonnet_model": "glm-4.7",
      "default_opus_model": "glm-4.7"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-azuretools.vscode-docker",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "bash -c 'if [ -f ~/.config/devcontainer/provider ]; then sed -i \"s#local provider=\\\\\\\"#local provider=\\\\\\\"\\$(cat ~/.config/devcontainer/provider)\\\\\\\"#\" ~/.bashrc; fi'",

  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/${localEnv:USER}/.claude,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "portsAttributes": {
    "8000": {
      "label": "Application Port"
    }
  },

  "remoteUser": "${localEnv:USER}",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
