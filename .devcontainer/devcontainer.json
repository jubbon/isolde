{
  "name": "Claude Code Environment",

  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USERNAME": "${localEnv:USER}"
    }
  },

  "containerEnv": {
    // Proxy now configured via ./features/proxy only - creates /etc/profile.d/devcontainer-proxy.sh
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true,
      "npxInstallCachedPackages": true
    },
    "./features/proxy": {
      "http_proxy": "http://192.168.1.21:2080",
      "https_proxy": "http://192.168.1.21:2080",
      "no_proxy": "localhost,127.0.0.1,.local",
      "enabled": true
    },
    "./features/claude-code": {
      "version": "latest",
      "provider": "z.ai",
      "models": "haiku:glm-4.5-air,sonnet:glm-4.7,opus:glm-4.7"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-azuretools.vscode-docker",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "bash -c 'if [ -f ~/.config/devcontainer/provider ]; then sed -i \"s#local provider=\\\\\\\"#local provider=\\\\\\\"\\$(cat ~/.config/devcontainer/provider)\\\\\\\"#\" ~/.bashrc; fi'",

  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/${localEnv:USER}/.claude,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "portsAttributes": {
    "8000": {
      "label": "Application Port"
    }
  },

  "remoteUser": "${localEnv:USER}",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
